<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>

        <item name="colorControlNormal">#11F</item>
        <item name="colorControlActivated">#860</item>

    </style>

    <!-- Устанавливает в качестве фона drawable -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- active hint -->
    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FF0</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF00</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCounterText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <!-- input field style -->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#860</item>
        <item name="colorControlActivated">#9103</item>
    </style>

    <style name="YTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">#F99</item>
    </style>


    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">#FFF</color>

